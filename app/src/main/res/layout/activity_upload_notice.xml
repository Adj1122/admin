<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadNotice">

    <ImageButton
        android:id="@+id/i1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="588dp"
        android:background="@drawable/circle_purple"
        android:contentDescription="computer"
        android:gravity="center"
        android:onClick="cs"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_event_note_24" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="567dp"
        android:text="SELECT IMAGE"
        android:textColor="@color/black" />


    <EditText
        android:id="@+id/noticeTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="504dp"
        android:textSize="20dp"
        android:hint="Notice Title"/>

    <Button
        android:id="@+id/noticeUploadBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="451dp"
        android:text="Upload Notice"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/noticeUploadBtn"/>



</RelativeLayout>